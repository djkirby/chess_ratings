<h3>Chess Players</h3>

<table border=1>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Rating</th>
      <!--<th></th>-->
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= @players.index(player) + 1 %></td>
        <td><%= link_to player.name, player %></td>
        <td><%= player.rating %></td>
        <!--<td><%= link_to '[X]', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

